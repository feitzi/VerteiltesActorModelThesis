{
    "editor.fontSize": 20,

    "latex-workshop.latex.recipes": [{
      "name": "texify",
      "tools": [
        "bibtex",
        "texify"
      ]
    }],
    "latex-workshop.latex.tools": [
      {
      "name": "texify",
      "command": "texify",
      "args": [
        "--synctex",
        "--pdf",
        "--tex-option=\"-interaction=nonstopmode\"",
        "--tex-option=\"-file-line-error\"",
        "%DOC%.tex"
      ]
    },
    {
          "name": "bibtex",
          "command": "bibtex",
          "args": [
            "%DOCFILE%"
          ]
        }
    ],
    
